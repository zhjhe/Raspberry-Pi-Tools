set number
set autoread
set nocp
set ruler
filetype on
filetype plugin on
syn on

set cindent
set smartindent
set autoindent
filetype indent on

set tabstop=4
set softtabstop=4
set shiftwidth=4
set smarttab
set expandtab

set hlsearch
set incsearch

set noswapfile
set nobackup
set nowritebackup

set encoding=utf-8
